<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.led.led.Data">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background_image"
        android:scaleType="centerCrop"> </ImageView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background_blur"
        android:background="#a0000000"
       > </ImageView>


    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.led.led.Data"
    android:orientation="vertical"
    >


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:fillViewport="true"
    android:layout_weight="1"
    android:scrollbarThumbVertical="@color/material_blue_grey_800">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <DigitalClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/digitalClock"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:scrollbarSize="18sp"
        android:layout_margin="18dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:layout_margin="18dp"/>
    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/action_chooser">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" after "
            android:id="@+id/textView2"
            android:textSize="18dp"
            android:background="@drawable/textback221"
            android:textColor="#ff000000"
            android:textAlignment="gravity"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/timer_textView"
            android:layout_centerHorizontal="true"
            android:text="Time"
            android:textSize="18sp"
            android:background="@drawable/textback222"
            android:textColor="#ff000000"
            android:textAlignment="gravity"
            />

    </LinearLayout>
</RelativeLayout>




</LinearLayout>
</ScrollView>

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="50dp"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:id="@+id/linearLayout"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true">

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/send"
        android:clickable="true"
        android:onClick="sendtime"
        android:layout_weight="1" />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancel"
        android:clickable="true"
        android:onClick="sendtime"
        android:layout_weight="1"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clear Timer"
        android:id="@+id/clear_timer"
        android:clickable="true"
        android:onClick="sendtime"
        android:layout_weight="1"
        />

</LinearLayout>
</RelativeLayout>
</LinearLayout>
</RelativeLayout>